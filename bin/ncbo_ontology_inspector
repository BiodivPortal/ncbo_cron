      #@aggregates=nil,
      #@persistent=true,
      #@previous_values=nil,
      #@unmapped=nil,

    else

      # This section can inspect common properties of ontologies, including summaryOnly ontologies.
      if properties[:id]
        print_element('id', ont.id.to_s)
