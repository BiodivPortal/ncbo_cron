      #@administeredBy=
      #    [#<LinkedData::Models::User:0x007f1bfeafbf60
      #        @aggregates=nil,
      #        @id=#<RDF::URI:0x3f8dff54d2d4(http://data.bioontology.org/users/rubin)>,
      #            @loaded_attributes=#<Set: {}>,
      #                @modified_attributes=#<Set: {}>,
