      #    [#<LinkedData::Models::Category:0x007f1bfeaf9288
      #        @aggregates=nil,
      #        @id=
      #            #<RDF::URI:0x3f8dff551528(http://data.bioontology.org/categories/Biomedical_Resources)>,
      #            @loaded_attributes=#<Set: {}>,
      #                @modified_attributes=#<Set: {}>,
      #                    @persistent=true,
